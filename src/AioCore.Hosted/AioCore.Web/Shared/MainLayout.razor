@inherits LayoutComponentBase

<Layout>
    <div class="wrapper-header">
        <Header Class="header d-flex" Style="padding: 0;">
            <i class="fa-solid fa-bars my-auto text-white"></i>
        </Header>
    </div>
    <Layout Class="site-layout">
        <Sider Collapsible Collapsed="true">
            <div class="logo"></div>
            <Menu Theme="MenuTheme.Dark" Mode="MenuMode.Inline" DefaultSelectedKeys=@(new[] { "1" })>
                <MenuItem Key="pages">
                    <i class="fa-solid fa-memo"></i>
                    <span>Giao diện</span>
                </MenuItem>
                <MenuItem Key="2">
                    <Icon Type="video-camera" Theme="outline"/>
                    <span>nav 2</span>
                </MenuItem>
                <MenuItem Key="3">
                    <Icon Type="upload" Theme="outline"/>
                    <span>nav 3</span>
                </MenuItem>
            </Menu>
        </Sider>
        <Content Class="site-layout-background" Style="margin: 24px 16px;padding: 24px;min-height: 280px;">
            @Body
        </Content>
    </Layout>
</Layout>
@{
    RenderFragment faMemo = @<i class="fa-solid fa-memo"></i>;
}