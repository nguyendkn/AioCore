@page "/pages"
@using Shared.Objects
@using MongoDB.Driver
@using Shared.Objects.AggregateModels.PageAggregate
@using AioCore.Mongo.OM.MongoCore

@inject AioCoreContext _context

<PageTitle>Pages</PageTitle>


<PageHeader Title="Pages">
    <button @onclick="OnToggleModal" type="button" class="ml-3 inline-flex items-center px-4 py-2 border border-transparent 
       rounded-md shadow-sm text-sm font-medium text-white bg-gray-800 hover:bg-gray-900 focus:outline-none 
       focus:ring-2 focus:ring-offset-2 focus:ring-gray-700">
        Create
    </button>
</PageHeader>

@if (_showModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
            <div class="relative inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
                <EditForm Model="_page" action="#" method="POST" class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                        <div class="mt-1">
                            <InputText @bind-Value="_page.Title" id="name" type="text" class="block border border-gray-300 focus:border-indigo-500 
                                focus:ring-indigo-500 h-8 px-2 rounded-md shadow-sm sm:text-sm w-full"></InputText>
                        </div>
                    </div>
                    <div>
                        <label for="slug" class="block text-sm font-medium text-gray-700">Slug</label>
                        <div class="mt-1">
                            <InputText @bind-Value="_page.Slug" id="slug" type="text" class="block border border-gray-300 focus:border-indigo-500 
                                focus:ring-indigo-500 h-8 px-2 rounded-md shadow-sm sm:text-sm w-full"></InputText>
                        </div>
                    </div>
                    <div class="sm:col-span-2">
                        <label for="template-url" class="block text-sm font-medium text-gray-700">Template URL</label>
                        <div class="mt-1">
                            <InputText @bind-Value="_page.Template" id="template-url" type="text" class="block border border-gray-300 focus:border-indigo-500 
                                focus:ring-indigo-500 h-8 px-2 rounded-md shadow-sm sm:text-sm w-full"></InputText>
                        </div>
                    </div>
                    <div class="sm:col-span-2">
                        <div class="flex justify-between">
                            <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                        </div>
                        <div class="mt-1">
                            <InputTextArea @bind-Value="_page.Description" id="description" rows="4" class="p-2 block w-full shadow-sm sm:text-sm 
                                focus:ring-indigo-500 focus:border-indigo-500 border border-gray-300 rounded-md"></InputTextArea>
                        </div>
                    </div>
                </EditForm>
                <div class="mt-5 sm:mt-6 sm:grid sm:grid-cols-2 sm:gap-3 sm:grid-flow-row-dense">
                    <button @onclick="OnSubmit" type="button" class="w-full inline-flex justify-center rounded-md 
                        border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base 
                        font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 
                        focus:ring-offset-2 focus:ring-indigo-500 sm:col-start-2 sm:text-sm">
                        Save
                    </button>
                    <button @onclick="OnToggleModal" type="button" class="mt-3 w-full inline-flex justify-center rounded-md 
                        border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium 
                        text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 
                        focus:ring-indigo-500 sm:mt-0 sm:col-start-1 sm:text-sm">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<main>
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8 mt-7">
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
            <ul role="list" class="divide-y divide-gray-200">
                @foreach (var pageItem in _pages)
                {
                    <li>
                        <a href="#" class="block hover:bg-gray-50">
                            <div class="flex items-center px-4 py-4 sm:px-6">
                                <div class="min-w-0 flex-1 flex items-center">
                                    <div class="flex-shrink-0">
                                        <img class="h-12 w-12 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                                    </div>
                                    <div class="min-w-0 flex-1 px-4 md:grid md:grid-cols-2 md:gap-4">
                                        <div>
                                            <a href="@pageItem.Template" class="text-sm font-medium text-indigo-600 truncate">@pageItem.Title</a>
                                            <p class="mt-2 flex items-center text-sm text-gray-500">
                                                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                                </svg>
                                                <span class="truncate">@pageItem.Description</span>
                                            </p>
                                        </div>
                                        <div class="hidden md:block">
                                            <div>
                                                <p class="text-sm text-gray-900">
                                                    Cập nhật:
                                                    <time datetime="@pageItem.Timestamp.ToString("dd/MM/yyyy hh:mm tt")">@pageItem.Timestamp.ToString("dd/MM/yyyy hh:mm tt")</time>
                                                </p>
                                                <p class="mt-2 flex items-center text-sm text-gray-500">
                                                    <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                                    </svg>
                                                    Đã đồng bộ mẫu giao diện
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</main>

@code {

    private bool _showModal;
    private readonly Page _page = new();
    private List<Page> _pages = new();

    protected override async Task OnInitializedAsync()
    {
        _pages = await Fetch();
        await base.OnInitializedAsync();
    }

    private void OnToggleModal()
    {
        _showModal = !_showModal;
    }

    private async Task OnSubmit()
    {
        _page.Timestamp = DateTimeOffset.Now;
        await _context.Pages.AddAsync(_page);
        _pages = await Fetch();
        _showModal = false;
    }

    private async Task<List<Page>> Fetch()
    {
        return await _context.Pages.Where(x => true).OrderBy(x => x.Timestamp).ToListAsync();
    }

}